$infoBarHeight = 50rem

.management-page-container {
  padding-bottom 0 !important

  .content-container {
    position relative
    box-sizing border-box
    width 100%
    height 100%
    padding-top $infoBarHeight

    .top {
      position absolute
      top 0
      left 0
      display flex
      align-items center
      justify-content space-between
      box-sizing border-box
      width 100%
      height $infoBarHeight
      padding-bottom 20rem
      font-size 14rem

      .right {

        .btn-icon {
          margin-left 10rem
          font-size 22rem
          cursor pointer
        }
      }
    }


    .bottom {
      position relative
      box-sizing border-box
      width 100%
      height 100%
      border 1rem solid var(--border-color)
      border-bottom none
      border-top-left-radius 6rem
      border-top-right-radius 6rem


      .image-management-list {
        position relative
        display flex
        flex-wrap wrap
        align-content flex-start
        box-sizing border-box
        width 100%
        padding 2rem
        overflow-y auto

        li.image-management-item {
          position relative
          box-sizing border-box
          padding 10rem

          &.image {
            width 230rem
          }

          &:last-child {
            margin-right 0
          }
        }
      }
    }
  }
}
